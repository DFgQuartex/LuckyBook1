<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="fill">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#ededed"
                android:startColor="#a8a8a8" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/twice_view_margin"
        android:left="@dimen/twice_view_margin"
        android:right="@dimen/twice_view_margin"
        android:top="@dimen/twice_view_margin">
        <bitmap
            android:gravity="center"
            android:src="@drawable/plus_image" />
    </item>
</layer-list>